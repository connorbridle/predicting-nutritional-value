<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ExampleFoodDB">
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="SubmitFoodButton" mnemonicParsing="false" onAction="#submitFoodItemButton" text="Load selected Food Item" />
         </children>
      </HBox>
   </bottom>
   <center>
      <TableView fx:id="table" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="calsColumn" prefWidth="59.0" text="Calories" />
            <TableColumn fx:id="fatColumn" prefWidth="59.0" text="Fat" />
            <TableColumn fx:id="satFatColumn" prefWidth="59.0" text="Sat-Fat" />
            <TableColumn fx:id="carbsColumn" prefWidth="59.0" text="Carbs" />
            <TableColumn fx:id="sugarsColumn" prefWidth="59.0" text="Sugars" />
            <TableColumn fx:id="fibreColumn" prefWidth="59.0" text="Fibre" />
            <TableColumn fx:id="proteinColumn" prefWidth="59.0" text="Protein" />
            <TableColumn fx:id="saltColumn" prefWidth="59.0" text="Salt" />
        </columns>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </TableView>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="900.0" style="-fx-background-color: #1e90ff#1e90ff #1e90ff#1e90ff;" BorderPane.alignment="CENTER">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Food Database">
               <font>
                  <Font size="27.0" />
               </font>
            </Text>
         </children>
      </HBox>
   </top>
</BorderPane>
